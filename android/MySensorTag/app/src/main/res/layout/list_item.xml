<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/expand_devicename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textSize="16dp"
        android:layout_alignParentStart="true"
        android:text="Sensor Tag"
        android:paddingBottom="10dp" />
    <TextView
        android:id="@+id/expand_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textSize="16dp"
        android:text="12:34:56:78:90:12:34"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/expand_devicename"/>
    <TextView
        android:id="@+id/expand_rssid"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="-50db"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/expand_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_signal_wifi_3_bar_black_48dp"
        android:layout_marginRight="10dp"/>
</RelativeLayout>